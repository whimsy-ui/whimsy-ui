{
  "private": true,
  "name": "whimsy-ui",
  "packageManager": "pnpm@7.3.0",
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "playground",
    "docs"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm run -C internal/build start",
    "test": "vitest run",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "preinstall": "tsx ./scripts/preinstall.ts",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstallmac": "git config core.hooksPath .husky && chmod 700 .husky/*",
    "eslint": "eslint --cache --max-warnings 0  \"./packages/**/*.{vue,ts,js,tsx}\" --fix",
    "commit": "git add . && git-cz",
    "test:run": "vitest run",
    "stub": "pnpm run -r --parallel stub",
    "prettier": "prettier \"./packages/**/*.{vue,ts,js,tsx}\" --write",
    "postinstall": "pnpm stub",
    "typecheck": "run-p typecheck:web typecheck:play typecheck:node",
    "typecheck:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit",
    "typecheck:play": "vue-tsc -p tsconfig.play.json --composite false --noEmit",
    "publish2npm": "sh ./scripts/publish.sh"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-angular": "^17.4.4",
    "@commitlint/cz-commitlint": "^17.4.4",
    "@iconify-json/ic": "^1.1.13",
    "@pnpm/types": "^8.10.0",
    "@types/fs-extra": "^11.0.1",
    "@types/gulp": "^4.0.10",
    "@types/gulp-clean-css": "^4.3.0",
    "@types/gulp-sass": "^5.0.0",
    "@types/node": "*",
    "@types/undertaker": "^1.2.8",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vue/tsconfig": "^0.1.3",
    "chalk": "^5.2.0",
    "commitizen": "^4.3.0",
    "consola": "^2.15.3",
    "cz-customizable": "^6.9.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "happy-dom": "^8.9.0",
    "husky": "^8.0.3",
    "inquirer": "^8.2.5",
    "jiti": "^1.17.2",
    "lint-staged": "^12.5.0",
    "node-sass": "^8.0.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "sass": "^1.59.2",
    "tsx": "^3.12.4",
    "typescript": "^4.5.2",
    "unplugin-vue-components": "^0.24.1",
    "unplugin-vue-macros": "^0.11.2",
    "unplugin-vue-setup-extend-plus": "^0.4.9",
    "vite": "^4.1.0",
    "vite-plugin-dts": "^1.7.3",
    "vitest": "^0.28.5",
    "vue": "^3.2.37",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.24",
    "web-norm": "^1.0.27"
  },
  "dependencies": {
    "@whimsy-ui/build-utils": "workspace:*",
    "@whimsy-ui/components": "workspace:*",
    "@whimsy-ui/constants": "workspace:*",
    "@whimsy-ui/docs": "workspace:*",
    "@whimsy-ui/hooks": "workspace:*",
    "@whimsy-ui/playground": "workspace:*",
    "@whimsy-ui/presets": "workspace:*",
    "@whimsy-ui/utils": "workspace:*",
    "element-plus": "^2.3.0",
    "unocss": "^0.50.4",
    "whimsy-ui": "workspace:*"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "npm run eslint"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,lees,scss,sass}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  }
}
