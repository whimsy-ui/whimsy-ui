{
  "private": true,
  "name": "whimsy-ui",
  "packageManager": "pnpm@7",
  "version": "1.0.0",
  "main": "index.ts",
  "workspaces": [
    "packages/*",
    "playground",
    "docs"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm -C packages/whimsy-ui build",
    "test": "vitest run",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "preinstall": "tsx ./scripts/preinstall.ts",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstallmac": "git config core.hooksPath .husky && chmod 700 .husky/*",
    "eslint": "eslint --cache --max-warnings 0  \"./packages/**/*.{vue,ts,js,tsx}\" --fix",
    "commit": "git add . && git-cz",
    "test:run": "vitest run",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "prettier": "prettier \"./packages/**/*.{vue,ts,js,tsx}\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@commitlint/cz-commitlint": "^17.0.3",
    "@iconify-json/ic": "^1.1.12",
    "@types/node": "^18.14.6",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vitest/coverage-c8": "^0.28.4",
    "@vue/test-utils": "^2.2.10",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.9.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "happy-dom": "^8.2.6",
    "husky": "^8.0.3",
    "inquirer": "^8.2.5",
    "lint-staged": "^12.5.0",
    "node-sass": "^8.0.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.3.0",
    "sass": "^1.58.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.2",
    "unocss": "^0.49.4",
    "unplugin-vue-setup-extend-plus": "^0.4.9",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.2",
    "vitest": "^0.28.4",
    "web-norm": "^1.0.27"
  },
  "dependencies": {
    "@whimsy-ui/components": "workspace:*",
    "@whimsy-ui/docs": "workspace:*",
    "@whimsy-ui/hooks": "workspace:*",
    "@whimsy-ui/playground": "workspace:*",
    "@whimsy-ui/utils": "workspace:*",
    "vue": "^3.2.47",
    "whimsy-ui": "workspace:*"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "npm run eslint"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,lees,scss,sass}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
